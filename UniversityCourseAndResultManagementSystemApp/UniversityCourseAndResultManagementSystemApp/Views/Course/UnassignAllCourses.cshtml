
@{
    ViewBag.Title = "UnassignAllCourses";
    string message = ViewBag.message;
}

<div class="container">

    <form id="EnrollCourse" class="well form-horizontal" method="POST">
        <fieldset>
           
            <legend><center><h2><b>UNASSIGN ALL COURSES</b></h2></center></legend><br>
            
            @if (message != null)
            {
                <h3 align="center">@message</h3>
            }

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4" style="margin-left: 54%;">
                    <br>
                    <button type="submit" class="btn btn-warning"> UNASSIGN ALL COURSES <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

